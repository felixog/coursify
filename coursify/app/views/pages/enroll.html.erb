          <div><%= devise_error_messages_stripe(@studentuser)  %></div>

            <div><% if flash[:stripe]%>
<% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
              <div data-alert style="margin:4px; margin-bottom:12px;" class="alert-box radius success">
                <%= content_tag :div, msg %>
                <a href="#" class="close">&times;</a>
              </div>
            <% end %>
          <% end %> 
          <% end %> </div>
            <div class="small-12 large-12 columns">

            
            <%= form_for( @message, :url => {:action => 'enroll'}) do |form| %>


 <div class="formbody" >

                  <div>
                  <%= form.label :name, 'Full Name:' %>
                  <%= form.text_field :name, :placeholder => "Enter your full name" %>
                  </div>

                  <div>
                  <%= form.label :email, 'Email Address:' %>
                  <%= form.text_field :email, :placeholder => "Enter your email address" %>
                  </div>  

                  <div class="field">
                   
                  <label>Password (8 characters minimum)</label>
                  <%= form.password_field :password, autocomplete: "off" %>
                </div>

           


                  <div>
                  <%= form.hidden_field :subject, value: "OneDayRails Enroll" %>
                  </div>

                         
 </div>

    


    <script src="https://checkout.stripe.com/checkout.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js"></script>


    <button id="customButton" class="button expand success large radius" style="background-color:rgb(216, 38, 46);" >GET STARTED</button>

  <script>
    $('#customButton').click(function(){
      var token = function(res){
        var $input = $('<input type=hidden name=stripeToken />').val(res.id);
        $('form').append($input).submit();
      };

      StripeCheckout.open({
        key:         '<%= Rails.configuration.stripe[:publishable_key] %>',
        amount:      <%= current_price_stripe %>,
        currency:    'usd',
        image:       '/yourlogo.png',
        name:        'Your Course Name',
        description: 'Enroll Today for Only $<%= current_price %>',
        panelLabel:  'GET STARTED',
        token:       token
      });

      return false;
    });
  </script>


    <% end %>
           
  
           
          
              
